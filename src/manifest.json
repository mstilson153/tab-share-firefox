{
  "manifest_version": 2,
  "name": "Tab Share",
  "version": "1.0",

  "description": "Generates a QR code of the URL of the current tab that can be scanned by a smart phone or tablet.",
  "homepage_url": "https://github.com/mstilson153/tab-share-firefox",
  "icons": {
    "96": "icons/TabShare-96.png",
    "64": "icons/TabShare-64.png",
    "48": "icons/TabShare-48.png",
    "32": "icons/TabShare-32.png"
  },

  "permissions": [
    "activeTab"
  ],

  "browser_action": {
    "default_icon": "icons/TabShare-32.png",
    "default_title": "Tab Share",
    "default_popup": "popup/index.html"
  }
}